# ================================================
# LENTERA AKSARA - TO USK CONFIGURATION
# ================================================
# Copy this to your .env for TO USK presentation
# All challenge features will be HIDDEN
# ================================================

# === CORE APPLICATION SETTINGS ===
APP_NAME="Lentera Aksara"
APP_ENV=local
APP_KEY=base64:your_app_key_here
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost

# === DATABASE ===
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=lentera_aksara
DB_USERNAME=root
DB_PASSWORD=

# === CHALLENGE FEATURES - HIDDEN FOR TO USK ===
# Set false to hide advanced features during presentation
FEATURE_TRANSLATION=false        # ❌ Hide language switcher (ID/EN)
FEATURE_DARK_MODE=false          # ❌ Hide dark mode toggle
FEATURE_REVIEWS=false            # ❌ Hide rating & review system
FEATURE_WISHLIST=false           # ❌ Hide wishlist/favorit
FEATURE_AOS_ANIMATIONS=false     # ❌ Disable scroll animations
FEATURE_PDF_INVOICE=false        # ❌ Hide PDF invoice download
FEATURE_NOTIFICATIONS=false      # ❌ Hide notifications for TO USK

# === OPTIONAL FEATURES ===
# You can also hide these if needed
FEATURE_CART=true               # ✅ Keep cart visible
FEATURE_ORDERS=true             # ✅ Keep orders visible
FEATURE_SEARCH=true             # ✅ Keep search visible
FEATURE_CONTACT=true            # ✅ Keep contact visible

# === CACHE, SESSION, QUEUE ===
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=database

# === MAIL (Optional) ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@lenteraaksara.com"
MAIL_FROM_NAME="${APP_NAME}"

# ================================================
# INSTRUCTIONS FOR TO USK:
# 1. Copy this file content
# 2. Paste to your .env file
# 3. Run: php artisan config:clear
# 4. Run: php artisan view:clear
# 5. Refresh browser (Ctrl + F5)
# 6. All challenge features will be HIDDEN!
# ================================================
